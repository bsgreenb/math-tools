% math-notes-preamble.sty - Shared preamble for converted Jupyter notebooks
% Usage: \usepackage{math-notes-preamble}
% Minimal dependencies - works with BasicTeX

\ProvidesPackage{math-notes-preamble}

% Core packages (included in BasicTeX)
\usepackage{parskip}
\usepackage{graphicx}
\setkeys{Gin}{keepaspectratio}
\usepackage{float}
\floatplacement{figure}{H}
\usepackage{xcolor}
\usepackage{enumerate}
\usepackage{geometry}
\usepackage{amsmath}
\usepackage{amssymb}
\usepackage{hyperref}
\usepackage{longtable}
\usepackage{array}

% Font encoding
\usepackage[T1]{fontenc}
\usepackage[utf8]{inputenc}

% Colors for hyperref
\definecolor{urlcolor}{rgb}{0,.145,.698}
\definecolor{linkcolor}{rgb}{.71,0.21,0.01}
\definecolor{citecolor}{rgb}{.12,.54,.11}

% Pandoc compatibility
\providecommand{\tightlist}{%
  \setlength{\itemsep}{0pt}\setlength{\parskip}{0pt}}

% Simple image scaling (replaces adjustbox dependency)
\newcommand*\pandocbounded[1]{%
  \begingroup
  \setbox0=\hbox{#1}%
  \ifdim\wd0>\linewidth
    \resizebox{\linewidth}{!}{#1}%
  \else
    #1%
  \fi
  \endgroup
}

% Math Jax compatibility
\def\gt{>}
\def\lt{<}

% Hyperref setup
\hypersetup{
  breaklinks=true,
  colorlinks=true,
  urlcolor=urlcolor,
  linkcolor=linkcolor,
  citecolor=citecolor,
}

% Margins
\geometry{verbose,tmargin=1in,bmargin=1in,lmargin=1in,rmargin=1in}
